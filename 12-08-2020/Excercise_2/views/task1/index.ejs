<%- include('../includes/header.ejs') %>
<%- include('../includes/navigation.ejs') %>

<div class="panel panel-primary">
      <div class="panel-heading">
            <h3 class="panel-title">Calculate area of a reactangle or a square</h3>
      </div>
      <div class="panel-body">
            
            <div class="container">
                
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <form>
                            <legend>Rectangle</legend>                        
                            <div class="form-group">
                                <label for="">width</label>
                                <input type="text" class="form-control" id="width" placeholder="200">
                                <label for="">height</label>
                                <input type="text" class="form-control" id="height" placeholder="150">
                            </div>
                            <button type="button" class="btn btn-primary" onclick="calAreaRectangle()" >Calculate area</button>
                        </form>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <svg>
                            <rect width="200" height="150" style="fill:gray;stroke:blue;stroke-width:2;fill-opacity:0.1;stroke-opacity:0.9" />
                          </svg>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <h4>Rectangle Area:</h4>
                        <h4 id='rectangleArea'>30000</h4>
                    </div>
                </div>
                <div class="row">
                    <hr>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <form>
                            <legend>Square</legend>                        
                            <div class="form-group">
                                <label for="">size</label>
                                <input type="text" class="form-control" id="size" placeholder="150">
                            </div>
                            <button type="button" class="btn btn-primary" onclick="calAreaSquare()">Calculate area</button>
                        </form>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <svg>
                            <rect width="150" height="150" style="fill:gray;stroke:blue;stroke-width:2;fill-opacity:0.1;stroke-opacity:0.9" />
                          </svg>
                    </div>
                    
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <h4>Square Area:</h4>
                        <h4 id='squareArea'>22500</h4>
                    </div>
                </div>
                
            </div>
            
      </div>
</div>

<script>
    function calAreaRectangle() {
        var width =  parseInt(document.getElementById("width").value);
        var height = parseInt(document.getElementById("height").value);
      document.getElementById("rectangleArea").innerHTML = width*height;
    }
    function calAreaSquare() {
        var size =  parseInt(document.getElementById("size").value);
      document.getElementById("squareArea").innerHTML = size*size;
    }
</script>

